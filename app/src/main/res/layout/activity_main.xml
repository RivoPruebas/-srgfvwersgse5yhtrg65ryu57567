<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo">



        <GridLayout
            android:id="@+id/botones"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.5"
            android:columnCount="5"
            android:rowCount="5">

            <Button
                android:id="@+id/rojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="0.33"
                android:layout_row="0"
                android:layout_rowWeight="0.33"
                android:background="@drawable/rojo_hover" />

            <Button
                android:id="@+id/amarillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="0.33"
                android:layout_row="0"
                android:layout_rowWeight="0.33"
                android:background="@drawable/amarillo_hover" />

            <Button
                android:id="@+id/verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="0.33"
                android:layout_row="2"
                android:layout_rowWeight="0.33"
                android:background="@drawable/verde_hover" />

            <Button
                android:id="@+id/azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="0.33"
                android:layout_row="2"
                android:layout_rowWeight="0.33"
                android:background="@drawable/azul_hover" />



        </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1.35"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelPuntuacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puntuasion wey"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/puntuacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/jugar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:text="Lets do this!!"
        android:background="@drawable/gris_hover"/>
    <Button
        android:id="@+id/restart"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_weight="0.75"
        android:text="RESTART"
        android:background="@drawable/gris_hover"
        android:layout_marginLeft="90dp"/>
</LinearLayout>



